@page
@model IndexModel
@{
    ViewData["Title"] = "Marvell Book Store";
}

<div class="row">
    @foreach (var book in Model.Books)
    {
        <div class="col-3">
            <div class="card">
                <img src="~/@(!string.IsNullOrEmpty(book.CoverUrl) ? book.CoverUrl : "img/book-cover.png")" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@book.Name</h5>
                    <h6 class="card-subtitle">@book.PublishDate.ToString("MMMM yyyy")</h6>
                </div>
                <div class="card-footer">
                    <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                    <button class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    }
</div>
<div class="text-center">
    <nav aria-label="...">
        <ul class="pagination">
            @* <li class="page-item disabled">
                <span class="page-link">Prev</span>
            </li>
                *@
            @for (int i = 1; i <= Model.Pager.TotalPagesCount; i++)
            {
                string queryString = string.Join('&', Request.Query.Where(x => x.Key != "page" || x.Key != "page_size"));
                if (string.IsNullOrEmpty(queryString))
                    queryString += "?";
                else
                    queryString += "&";
                
                if (i > 1)
                    queryString += $"page={i}&";

                if (Model.Pager.PageSize.HasValue)
                    queryString += $"page_size={Model.Pager.PageSize.Value}&";

                queryString = queryString.Remove(queryString.Length - 1, 1);

                <li class="page-item">
                    <a class="page-link" 
                        href="@Url.PageLink()@Html.Raw(queryString)">
                    @i</a>
                </li>
            }
            
            @* <li class="page-item">
            <a class="page-link" href="#">Next</a>
            </li> *@
        </ul>
    </nav>
</div>

