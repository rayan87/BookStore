@model BookStore.Models.BookModel

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@(Model.Id == 0 ? "Create" : "Edit") Book</h3>
            </div>
            <form method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="text-center">
                    <img src="~/@(!string.IsNullOrEmpty(Model.CoverUrl) ? Model.CoverUrl : "img/book-cover.png")" class="img-thumbnail" width="200">
                    <input type="hidden" asp-for="CoverUrl">
                </div>
                
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control">
                    <span asp-validation-for="Author"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublishDate"></label>
                    <input asp-for="PublishDate" class="form-control">
                    <span asp-validation-for="PublishDate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CoverFile"></label>
                    <input asp-for="CoverFile" class="form-control">
                    <span asp-validation-for="CoverFile"></span>
                </div>
            
            </div>
            <div class="card-footer text-center">
                <button class="btn btn-primary">
                    @(Model.Id == 0 ? "Create" : "Update")
                </button>
            </div>
            </form>
        </div>
    </div>
</div>

